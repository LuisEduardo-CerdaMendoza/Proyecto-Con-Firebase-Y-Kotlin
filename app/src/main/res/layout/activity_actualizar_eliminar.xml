<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondoeliminar"
    tools:context=".ActualizarEliminar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/imageVolverIn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="25dp"
            android:clickable="true"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/volver" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/game"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:textAlignment="center"
            android:layout_marginRight="110dp"
            android:text="ACTUALIZAR \n ELIMINAR DATOS"
            android:textColor="@color/white"
            android:textSize="20dp"/>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="#FF0068"
        android:layout_margin="16dp"
        android:textColorHint="@color/white"
        app:startIconDrawable="@drawable/number">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtIdA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="center"
            android:hint="Id del Juego"
            android:textColor="@color/white"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="#FF0068"
        android:layout_margin="16dp"
        android:textColorHint="@color/white"
        app:startIconDrawable="@drawable/game">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtNombreJuegoA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="center"
            android:hint="Nombre del Juego"
            android:textColor="@color/white"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="#FF0068"
        android:layout_margin="16dp"
        android:textColorHint="@color/white"
        app:startIconDrawable="@drawable/tipo">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtTipoDeJuegoA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="center"
            android:hint="Tipo de Juego"
            android:textColor="@color/white"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="#FF0068"
        android:layout_margin="16dp"
        android:textColorHint="@color/white"
        app:startIconDrawable="@drawable/user">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPersonajeDeJuegoA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="center"
            android:hint="Personaje del Juego"
            android:textColor="@color/white"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="#FF0068"
        android:layout_margin="16dp"
        android:textColorHint="@color/white"
        app:startIconDrawable="@drawable/gamepad">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtJugabilidadMasFacilA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="center"
            android:hint="Forma de Jugar mas Facil"
            android:textColor="@color/white"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnRecuperar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:backgroundTint="#353278"
            android:textColor="@color/white"
            android:text="Recuperar">

        </Button>

        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:backgroundTint="#353278"
            android:textColor="@color/white"
            android:text="Actualizar Datos">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:backgroundTint="#353278"
            android:textColor="@color/white"
            android:text="Eliminar Datos">

        </Button>

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:backgroundTint="#353278"
            android:textColor="@color/white"
            android:text="Limpiar">

        </Button>

    </LinearLayout>

</LinearLayout>